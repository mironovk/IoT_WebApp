@model DataBaseItem
@{
    ViewData["Title"] = "Select sensor, data type and position:";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Select">
            <div asp-validation-summary="ModelOnly" class="text-danger"/>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="Value" />
            <input type="hidden" asp-for="Date" />

            <div class="form-group">
                <label asp-for="SensorName" class="control-label">Sensor Name</label>
                <input asp-for="SensorName" class="form-control" />
                <span asp-validation-for="SensorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataType" class="control-label">Data Type</label>
                <input asp-for="DataType" class="form-control" />
                <span asp-validation-for="DataType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position" class="control-label">Position</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label">StartDate (yyyy-mm-dd hh:mm:ss)</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label">EndDate (yyyy-mm-dd hh:mm:ss)</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Show Chart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
